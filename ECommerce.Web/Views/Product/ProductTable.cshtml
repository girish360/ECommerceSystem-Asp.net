@model List<Product>

@{
    ViewBag.Title = "ProductTable";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form method="post">
       
        
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <input id="searchTxt" class="form-control" name="Search" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="searchBtn">Search</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="resetBtn">Reset</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="newBtn">New</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </form>
    
    
    
</div>


    <table class="table table-striped">
        <thead>
        <tr>
            <td>Product Name</td>
            <td>Category</td>
            <td>Price</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>
                    @if (@product.Category != null)
                    {
                        <text>@product.Category.Name</text>
                    }
                    else
                    {
                        <text>-</text>
                    }
                </td>
                <td>@product.Price</td>
                <td>
                    <button class="editButton" data-id="@product.ID">Edit</button>
                    <button class="deleteButton" data-id="@product.ID">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>




<script>
     $("#searchBtn").click(function () {
         var searchValue = $("#searchTxt").val();

         $.ajax({
                 url: '/Product/ProductTable',
                 data: {
                     search: searchValue
                 }
             })
             .done(function(response) {
                 $("#tableContiner").html(response);
             })
             .fail(function(XMLHttpRequest, textStatus, errorThrown) {
                 alert("Failed");
             });


     });


     $("#newBtn").click(function () {
         

         $.ajax({
             url: '@Url.Action("Create", "Product")',
                 
             })
             .done(function (response) {
                 $("#actionContainer").html(response);
             })
             .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                 alert("Failed");
             });


     });

     $(".editButton").click(function () {


         $.ajax({
             url: '/Product/Edit',
             data: {
                 ID: $(this).attr('data-id')
             }

             })
             .done(function (response) {
                 $("#actionContainer").html(response);
             })
             .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                 alert("Failed");
             });


     });

     $(".deleteButton").click(function () {
         var confirmDelete = confirm("Are you sure you want to delete this product?");

         if (confirmDelete == true) {

             $.ajax({
                     type: 'POST',
                     url: '/Product/Delete',
                     data: {
                         ID: $(this).attr('data-id')
                     }

                 })
                 .done(function (response) {
                     $("#tableContiner").html(response);
                 })
                 .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                     alert("Failed");
                 });
         }



     });
</script>